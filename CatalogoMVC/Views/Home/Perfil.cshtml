
@model HomeModel

<div class="align-content-center" class="perfil-container">
    <div class="perfil-box">
        <h1 class="text-center">Seu Perfil</h1>
        <form asp-controller="Home" asp-action="Alterar" method="post">
        <input type="hidden" asp-for="Id"/>
        <div class="row g-3">
            <div class="col-md-6">
                <label for="Name" class="form-label">Nome</label>
                <input type="text" asp-for="Name" class="form-control" id="Name" required>
                <div class="invalid-feedback">
                    Nome deve conter no mínimo 2 letras e não pode ter números.
                </div>
            </div>

            <div class="col-md-6">
                <label for="email" class="form-label">E-mail</label>
                <input type="text" asp-for="Email" class="form-control" id="email" required>
                <div class="invalid-feedback">
                    O e-mail deve conter "@@" e terminar com ".com".
                </div>
            </div>

            <div class="col-md-6">
                <label for="validationCustom04" class="form-label">Genêro</label>
                <select class="form-select" type="text" asp-for="Gender" id="validationCustom04" required>
                    <option selected disabled value="">Selecione seu gênero</option>
                    <option>Masculino</option>
                    <option>Feminino</option>
                </select>
                <div class="invalid-feedback">
                    Por favor selecione um gênero válido.
                </div>
            </div>

            <div class="col-md-6">
                <label for="postalCode" class="form-label">Código Postal</label>
                <input type="text" asp-for="Zip" class="form-control" id="postalCode" required>
                <div class="invalid-feedback">
                    Código Postal deve estar no formato 00000-000.
                </div>
            </div>

            <div class="col-md-6">
                <label for="password" class="form-label">Senha</label>
                <input type="password" asp-for="Password" class="form-control" id="password" required>
                <div class="invalid-feedback">
                    A senha deve ter no mínimo 4 caracteres.
                </div>
            </div>

            <div class="col-md-6">
                <label for="validationCustomUsername" class="form-label">Username</label>
                <div class="input-group has-validation">
                    <span class="input-group-text" id="inputGroupPrepend">@@</span>
                    <input type="text" asp-for="Username" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required>
                    <div class="invalid-feedback">
                        Por favor escolha um nome de usuário.
                    </div>
                </div>
            </div>

            <div class="profile-actions">
                <button type="submit" onclick="validateRegisterForm()" class="btn-edit">Salvar</button>
                <button asp-action="Apagar" asp-controller="Home" asp-route-id="@Model.Id" class="btn-delete">Deletar Perfil</button>
            </div>
        </form>
        </div>
    </div>
